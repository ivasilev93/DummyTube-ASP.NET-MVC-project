<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               @Html.ActionLink("DummyTube", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

             @using (@Html.BeginForm("Search", "Home", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
             {
                 <div class="form-group">
                     <input type="text" class="form-control" placeholder="Search" name="item">
                 </div>
                 <button type="submit" class="btn btn-default">Search</button>
             }

            @if (User.IsInRole("admin"))
            {
                @Html.ActionLink("Manage Panel", "Dashboard", "Admin", null, new { @class = "navbar-brand" })
            }

            <div class="navbar-collapse collapse">           
                @Html.Partial("~/Views/Shared/Partials/_LoginPartial.cshtml")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - The Dummy Tube Corp.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
